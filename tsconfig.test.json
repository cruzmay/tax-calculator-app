{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "src/__tests__/**/*.d.ts"
  ]
}

